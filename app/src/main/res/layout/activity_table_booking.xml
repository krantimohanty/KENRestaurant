<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/background_image"
   >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_book_table"
        android:text="BOOK A TABLE"
        android:drawableLeft="@drawable/image_table_book"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_date"
                android:text="Date"
                android:drawableLeft="@drawable/image_date"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:background="@color/light_grey"/>
            <EditText
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_date"
                android:hint="23 April,2017"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"/>

</LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_time"
                android:text="Time"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:drawableLeft="@drawable/image_time"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:background="@color/light_grey"/>

            <EditText
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_time"
                android:hint="8:00 PM"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"/>

        </LinearLayout></LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_guest"
                android:text="Guest"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:drawableLeft="@drawable/image_guest"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:background="@color/light_grey"/>

            <EditText
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_guest"
                android:hint="4"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"/>
        </LinearLayout>
        </LinearLayout>

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_contact_details"
        android:text="CONTACT DETAILS"
         android:drawableLeft="@drawable/image_profile_new"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
           android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_name"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:drawableLeft="@drawable/ic_edit"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:background="@color/light_grey"/>

            <EditText
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_name"
                android:hint="Your Name"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_email"
                android:text="E-Mail"
                android:drawableLeft="@drawable/image_email3"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:background="@color/light_grey"/>

            <EditText
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_email"
                android:hint="your@e-mail.com"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_phone"
                android:text="Phone"
                android:drawableLeft="@drawable/image_phone"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:background="@color/light_grey"/>

            <EditText
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_phone"
                android:hint="Your phone number "
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_add_message"
        android:text="Add a message"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/image_add2"
        android:textSize="16dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
       />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_request_booking"
        android:text="Request Booking"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@drawable/mybutton"
        android:paddingLeft="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>