<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_restaurant"
        android:text="KEN Restaurant"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="85dp"
        android:textSize="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/text_color_yellow"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="-20dp"
        android:id="@+id/image_1"
        android:src="@drawable/image_new"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_main_menu"
        android:text="Main Menu"
        android:paddingLeft="120dp"
        android:textSize="28dp"
        android:textStyle="bold"
        android:background="@color/bg_light_gradient_end"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_menu_list"
        android:paddingLeft="120dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:text="Menu List"
        android:textSize="28dp"
        android:background="@color/bg_light_gradient_end"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_your_order"
        android:text="Your Order"
        android:textStyle="bold"
        android:paddingLeft="120dp"
        android:paddingTop="5dp"
        android:textSize="28dp"
        android:background="@color/bg_light_gradient_end"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_Reservation"
        android:text="Reservation"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingLeft="120dp"
        android:textSize="28dp"
        android:background="@color/bg_light_gradient_end"
        android:textColor="@color/colorAccent"
        android:paddingBottom="12dp"/>

</LinearLayout>
