<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="80dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/text_kenblogs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KEN Restaurant"
        android:textSize="24dp"
        android:layout_marginLeft="90dp"
        android:textColor="@color/yellow"
        android:gravity="center_horizontal"
        android:layout_above="@+id/linearLayout1"
      />
<LinearLayout
android:id="@+id/linearLayout1"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="20dip"
android:orientation="vertical"
android:layout_centerVertical="true"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_email"
        android:text="Enter E-Mail Id"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:paddingBottom="15dp"/>
<EditText
    android:id="@+id/editText1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="someone@gmail.com"
    android:background="@drawable/editext_background"
    android:drawableLeft="@drawable/ic_action_person"
    android:padding="4dip"
    android:textColor="@color/bg_gradient_start"
    android:textColorHint="@color/background_floating_material_dark"
    android:inputType="textEmailAddress" >
</EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_password"
        android:text="Enter Password"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:paddingTop="15dp"/>
    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dip"
        android:hint="Enter password"
        android:padding="4dip"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_action_secure"
        android:textColorHint="@color/background_floating_material_dark"
        android:background="@drawable/editext_background"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="10dip"
        android:textStyle="bold"
        android:background="@drawable/bg_button_rounded"
        android:textColor="@color/white"
        android:text="Login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_forgotpassword"
        android:text="Forgot Password"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80dp"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"/>
</LinearLayout>
</LinearLayout>



