<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image"
    xml:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/text_dinner2"
        android:text="Dinner"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:paddingTop="14dp"
        android:paddingLeft="12dp"
        android:paddingBottom="14dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/image_breakfast"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_yasmin"
        android:text="Yasmin"
        android:textColor="@color/black"
        android:textSize="16dp"
       android:paddingLeft="12dp"
        android:drawableLeft="@drawable/profile"
        android:paddingTop="14dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/image_account"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_text_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_an_hour_ago"
        android:text="an hour ago"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:layout_width="370dp"
        android:layout_height="370dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="0dp"
        android:id="@+id/image_4"
        android:src="@drawable/image_takeout"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_home2"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/image_home2"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_collection"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="-5dp"
                android:src="@drawable/image_collection"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_add"
                android:layout_marginTop="-5dp"
                android:src="@drawable/image_add"
                android:layout_marginLeft="53dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_newsfeed"
                android:layout_marginTop="-5dp"
                android:src="@drawable/image_newsfeed"
                android:layout_marginLeft="53dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_account"
                android:layout_marginTop="-5dp"
                android:src="@drawable/image_account"
                android:layout_marginLeft="53dp"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_home"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Home"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_collection"
                android:layout_marginTop="5dp"
                android:text="Collections"
                android:textStyle="bold"
                android:layout_marginLeft="36dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_feed"
                android:text="Feed"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="110dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_Account"
                android:text="Account"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="51dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

    </LinearLayout>





